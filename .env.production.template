# WayMaker AI Production Environment Configuration
# Copy this to .env and fill in your values

# Database Configuration
DB_PASSWORD=your_secure_postgres_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# Application Security
SECRET_KEY=your_very_long_secret_key_here_min_32_chars

# AI Model API Keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (for user registration)
MAIL_FROM=noreply@3manwill4children.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# SSL Certificate paths (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/waymaker.3manwill4children.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/waymaker.3manwill4children.com.key

# Optional: Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Backup Configuration
BACKUP_S3_BUCKET=waymaker-backups
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key
